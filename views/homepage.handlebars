<!-- Loop over each object in the projects array -->

{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/post/{{post.id}}">{{post.name}}</a>
    </h2>
    <p>
      <!-- Pass needed_funding value to the helper function -->
      <!--<span class="dollar-amount">{{format_amount project.needed_funding}}</span>-->
      
    </p>
    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.description}}
    </p>
  </div>
</div>
 <form class="form new-project-form">
      <div class="form-group">
        <label for="project-comment">comment:</label>
        <textarea class="form-input" id="project-comment" name="project-comment"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add</button>
      </div>
</form>
{{/each}}

<div class="form-group">
  <button type="submit" class="btn btn-primary">Create</button>
</div>

<script src="./js/comment.js"></script>
