<!-- Loop over each object in the projects array -->

      <h1>WELCOME to the tech blog!</h1>
{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2><a href="/post/{{post.id}}">{{post.title}}</a></h2>
    <p>{{post.description}}</p>
    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
  </div>
</div>
{{/each}}
 {{#if logged_in}}
   <div class="form-group">
        <a href="/create_post"><button type="submit" class="btn btn-primary">Create post</button></a>
    </div>
{{else}}
   <div class="form-group">
        <a href="/login"><button type="submit" class="btn btn-primary">Create post</button></a>
    </div>
{{/if}}