<div class="row">
  <div class="col-auto">
    <h2>Welcome back, {{name}}!</h2>
  </div>
</div>


  {{#if posts.length}}
  <div class="col-md-6 project-list">
    <h3>Your posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2 your-post-list">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger btn-delete" id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}


<script src="./js/delete_post.js"></script>
